[Unit]
Description=Sonarr is a PVR for Usenet and BitTorrent users.
After=syslog.target network.target network-online.target

[Service]
User=jackett
Group=jackett

Type=simple
ExecStart=/usr/bin/mono /usr/share/jackett/NzbDrone.exe -nobrowser
TimeoutStopSec=20
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
